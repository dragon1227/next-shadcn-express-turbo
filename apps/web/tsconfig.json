{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@ui/*": ["../../packages/ui/src/*"],
      "@ui/lib/*": ["../../packages/ui/src/lib/*"],
      "@ui/icons": ["../../packages/ui/src/icons"],
      "@ui/style/*": ["../../packages/ui/src/style/*"],
      "@ui/providers/*": ["../../packages/ui/src/providers/*"],
      "@ui/components/*": ["../../packages/ui/src/components/ui/*"],
      "@ui/components/ui/*": ["../../packages/ui/src/components/ui/*"],
      "@ui/components/shared/*": ["../../packages/ui/src/components/shared/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
